<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
    crossorigin="anonymous" />
    <title>Dojo Survey</title>
</head>
<body>
    <div class="container">
        <h1 class="text-decoration-underline">Submitted Info</h1>
        @{
            if(ViewBag.Error != null)
            {
                <p class="text-danger text-center">@ViewBag.Error</p>
            } else {
                <p></p>
            }
        }
        <div class="card shadow w-75 fs-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        Name:
                    </div>
                    <div class="col-6">
                        @ViewBag.Name
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        Dojo Location:
                    </div>
                    <div class="col-6">
                        @ViewBag.Dojo
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        Favorite Language:
                    </div>
                    <div class="col-6">
                        @ViewBag.Language
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        Comments (optional):
                    </div>
                    <div class="col-6">
                        @{
                            if(ViewBag.Comment != null)
                            {
                                @ViewBag.Comment;
                            } else {
                                <span class="text-secondary">No Comment Made</span>
                            }
                        }
                    </div>
                </div>
                <div class="text-end"><a href="/" class="btn btn-primary">Go Back</a></div>
            </div>
        </div>
    </div>
</body>
</html>